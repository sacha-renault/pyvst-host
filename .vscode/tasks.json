{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-D_DEBUG",
                "-I./public.sdk/source",
                "-I./",
                "-fdiagnostics-color=always",
                "-g",
                "main.cpp",
                "src/cpp_host/*.cpp",
                "pluginterfaces/base/funknown.cpp", // ref to Steinberg::FUID
                "base/source/baseiids.cpp", // ref ti Steinberg::Vst::IEditController::iid
                "public.sdk/source/common/commoniids.cpp",
                "", // ref ti Steinberg::Vst::IEditController::iid
                "-o",
                "${workspaceFolder}/main",
                "-ldl"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}